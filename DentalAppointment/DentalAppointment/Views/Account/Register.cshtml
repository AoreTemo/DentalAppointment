@using DentalAppointment.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="container">
    <main>
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <form method="post" asp-action="Register" enctype="multipart/form-data">
                    <div class="row g-3">

                        <div class="col-12">
                            <label asp-for="FirstName" class="form-label">First name</label>
                            <input asp-for="FirstName" type="text" class="form-control"
                                   placeholder="First name" required>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="LastName" class="form-label">Last name</label>
                            <input asp-for="LastName" type="text" class="form-control"
                                   placeholder="Last name" required>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Age" class="form-label">Age</label>
                            <input asp-for="Age" type="number" min="0" max="120" step="1"
                                   class="form-control" placeholder="Age" required>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control"
                                   placeholder="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="ConfirmPassword" class="form-label">Password confirm</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control"
                                   placeholder="Confirm the password" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>


                        <button class="w-100 btn btn-primary btn-lg" type="submit">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>