@using Microsoft.AspNetCore.Identity;
@using Core.Models
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentalAppointment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentalAppointment.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/HomePage.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anonymous+Pro&family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm na
vbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
             <img src="/photos/Tooth.png" class="Tooth-header">
            </a>
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Doctors" asp-action="Index">Doctors</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item-button">
                                <form asp-area="" asp-controller="Account" asp-action="Info" method="get">
                                    <button type="submit" class="nav-link-but nav-link-but-log">Account</button>
                                </form>
                            </li>
                            <li class="nav-item-button">
                                <form asp-area="" asp-controller="Account" asp-action="LogOut" method="get">
                                    <button type="submit" class="nav-link-but nav-link-but-log">Log out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item-button">
                                <form asp-area="" asp-controller="Account" asp-action="Login" method="get">
                                    <button type="submit" class="nav-link-but home-btn">Log in</button>
                                </form>
                            </li>
                            <li class="nav-item-button">
                                <form asp-area="" asp-controller="Account" asp-action="Register" method="get">
                                    <button type="submit" class="nav-link-but home-btn">Register</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main id="mainmain" role="main" class="pb-0">
        @RenderBody()
    </main>
    <footer class="border-top-black footer text-muted">
        <div class="container text-dark">
            &copy; 2023 - DentalAppointment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

