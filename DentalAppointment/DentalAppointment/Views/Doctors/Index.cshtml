@using Core.Models
@model List<Doctor>

@{
    ViewBag.Title = "Doctors";
    Layout = "_Layout";
}

<h2>Doctors</h2>
<div class="row row-cols-4 row-cols-sm-4 row-cols-md-4 g-4">
@foreach (var doctor in Model)
{
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@doctor.ImageLink" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@doctor.Name @doctor.Surname @doctor.MiddleName</h5>
            <p class="card-text">@doctor.Age</p>
            <p class="card-text">@doctor.Info</p>
            <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Doctors"
               asp-action="Details" asp-route-id="@doctor.Id">
                Details
            </a>
        </div>
    </div>
}
</div>